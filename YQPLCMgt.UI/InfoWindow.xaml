<Window x:Class="YQPLCMgt.UI.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YQPLCMgt.UI"
        mc:Ignorable="d"
        Title="InfoWindow" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid Name="dgDevice" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding Path=MachineAndStop}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="编号" Width="80" Binding="{Binding Path=NO}"></DataGridTextColumn>
                <DataGridTextColumn Header="名称" Width="100" Binding="{Binding Path=NAME}"></DataGridTextColumn>
                <DataGridTextColumn Header="状态" Width="50" Binding="{Binding Path=STATUS}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Name="dgScan" IsReadOnly="True" AutoGenerateColumns="False" Grid.Column="1" ItemsSource="{Binding Path=Scnners}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="编号" Width="80" Binding="{Binding Path=NO}"></DataGridTextColumn>
                <DataGridTextColumn Header="名称" Width="100" Binding="{Binding Path=NAME}"></DataGridTextColumn>
                <DataGridTextColumn Header="扫码值" Width="50" Binding="{Binding Path=STATUS}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
